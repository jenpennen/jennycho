---
import type { CollectionEntry } from "astro:content";
import '../styles/global.css'
interface Props {
	project: CollectionEntry<'work'>;
}
const {data, slug, collection} = Astro.props.project;
---

<li class="link-card">
	<a href={`/${collection}/${slug}`}>
		<img src={data.image} alt={data.img_alt || ''}/>
		<div class="pt-3 pb-3">
		
		
		<h2 class="text-lg md:text-2xl sm:text-3xl font-brand">
			{data.title}
		</h2>
		<h3 class="text-xs font-semibold uppercase  text-gray-600 dark:text-gray-400">
			{data.org}
		</h3>
		<p>
			{data.description}
		</p>
		</div>
	</a>
</li>
<style>
	.link-card {
		display: flex;
		background-image: none;
		background-size: 400%;
		border-radius: 5px;
		/* background-position: 100%;
		background-repeat: no-repeat; */
		/* transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
		/* box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
	}
	.link-card > a {
		width: 100%;
		line-height: 1.3;
		border-radius: 8px;
		
	}
	.link-card img {
		width: 100%;
		height: auto;
		border-radius: 5px 5px 0 0 ;
	}
	p {
		margin-top: 0.25em;
		margin-bottom: 0.5em;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-color: var(--secondary-background);
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
