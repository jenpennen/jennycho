import type { CollectionEntry } from "astro:content";
import '~/styles/global.css'
interface Props {
	project: CollectionEntry<'work'>;
}
const {data, slug, collection} = Astro.props.project;

---

<li class="link-card bg-lightSecondaryBg border-lightSecondaryBg border-solid dark:border-darkSecondaryBg dark:bg-darkSecondaryBg ">
	<a href={`/${collection}/${slug}`}>
		<img src={data.image} alt={data.img_alt || ''}/>
		<h2 class="text-lg md:text-2xl sm:text-3xl pt-4">
			{data.title}
			<!-- <span>&rarr;</span> -->
		</h2>
		<h3 class="text-xs uppercase font-semibold">
			{data.label}
		</h3>
		<p>
			{data.description}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 1px;
		background-image: none;
		background-size: 400%;
		border-radius: 7px;
		background-position: 100%;
		background-repeat: no-repeat;
		/* transition: background-position 0.6s cubic-bezier(0.22, 1, 0.36, 1); */
		/* box-shadow: inset 0 0 0 1px rgba(255, 255, 255, 0.1); */
	}
	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 0.75em;
		border-radius: 8px;
		/* color: white; */
		/* background-color: var(--gray-100); */
		opacity: 0.9;
	}
	.link-card img {
		width: 100%;
		height: auto;
		border-radius: 5px;
	}
	/* h2 {
		margin: 0;
		padding-top: 0.5rem;
		font-size: 1.75rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
	} */
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
	}
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
</style>
