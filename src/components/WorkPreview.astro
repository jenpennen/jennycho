---
import type { CollectionEntry } from "astro:content";
import '../styles/global.css'
interface Props {
	project: CollectionEntry<'work'>;
}
const {data, slug, collection} = Astro.props.project;
---
<li class="link-card w-full list-none border rounded-lg shadow-md overflow-hidden border-lightSecondaryBg bg-lightSecondaryBg border-solid dark:border-darkSecondaryBg dark:bg-darkSecondaryBg">
  <a href={`/${collection}/${slug}`} class="flex flex-col md:flex-row w-full gap-4 p-4">
    <!-- image section -->
    <div class="flex-grow w-full md:w-1/3">
      <img 
        src={data.image} 
        alt={data.img_alt || ''} 
        class="w-full h-full object-cover rounded-lg shadow-md"
      />
    </div>
    <!-- content section  -->
    <div class="flex flex-col w-full md:w-2/3">
      <h2 class="text-3xl sm:text-lg pt-2 font-semibold dark:text-light">
        {data.title}
        <!-- <span class="ml-2">&rarr;</span> -->
      </h2>
      <p class="text-sm font-semibold text-gray-600 uppercase dark:text-gray-400">
        {data.label}
      </p>
      <p class="text-base text-gray-800 dark:text-gray-300">
        {data.description}
      </p>
    </div>
  </a>
</li>


<style>
	.link-card:is(:hover, :focus-within) {
		background-position: 0;
		background-image: var(--accent-gradient);
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: rgb(var(--accent-light));
	}
  .link-card.dark {
    background-color: var(--accent-overlay);
  }
</style>
