---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import ProjectDetails from "../components/ProjectDetails.astro";
import { OrganizeImportsMode } from "typescript";
// import "../styles/global.css"
interface Props {
	org ?: string | undefined;
	label ?: string | undefined;
	role ?: string | undefined;
	second_role ?: string | undefined;
	timeline ?: string | undefined;
	title: string;
	description?: string | undefined;
	image ?: string | undefined;
}
const {title, description, image, org, label, role, second_role, timeline} = Astro.props;
---
<html lang="eng">
	<head >
		<BaseHead title={title} description={description}/>
	</head>
	<body class="bg-lightBg text-lightText dark:bg-darkBg dark:text-darkText">
	<Header />
	<main>
	
		<article class="flex flex-col justify-center">
			<div class="pt-20 prose">
					<a href="/" class="hover:text-primary">
						<span class="hover:text-lightPrimary dark:hover:text-darkHeading text-sm">&larr; Home</span>
					</a>
			</div>
			<div class="flex gap-2 mb-4 w-full">
	
				<div class="flex flex-col w-full text-center">
					<div class="pt-10">
						<img src={image} />
					</div>
					<h1 class="text-3xl pt-5 font-brand tracking-wide pb-2">{title}</h1>
					<p class="font-body text-xs">{description}</p>
					<ProjectDetails org={org} label={label} role={role} second_role={second_role} timeline={timeline} />
					<div class="text-left content">
						<slot/>
					</div>
					
				</div>
			</div>
		</article>
	</main>
	<Footer />
	</body>
</html>
<script>

</script>
<style>
	/* * {
		font-family: 'DM Sans', sans-serif;
	} */
	header {
		padding-bottom: 2.5rem;
		font-weight:700;
		border-bottom: 1px solid var(--gray-800);
	}

	.back-link {
		display: none;
	}
	.content {
		max-width: 65ch;
		margin-inline: auto;
	}
	.content :global(.gallery){
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(3ch, 1fr));
	}
	.content :global(img) {
		border-radius: 0.5rem;
		width: 100%;
		margin:2rem 0;
		/* box-shadow: var(--medium-shadow); */
		/* background: var(--gradient-subtle); */
		/* border: 1px solid var(--gray-500); */
	}
	.content :global(.gallery img){
		box-shadow: none;
	}
	.content :global(em) {
		color: #c31d10;
		font-weight: 400;
		font-style:normal;
	}
	.dark .content :global(em) {
		color: #e5b3fe;
	}
	.content :global(li) {
		padding: 0.5rem 3rem;
		list-style-type: circle;
	}
	
	.content :global(h1) {
		font-family: Xanh Mono, serif;
		letter-spacing: 2px;
		padding: 3em 0 0 0;
		font-weight: 700;

	}
	.content :global(h2){
		font-size: 1.25rem;
		text-transform: uppercase;
		padding: 3em 0 0.5em 0;

	}
	.content :global(h3) {
		font-size: 1.05rem;
		padding: 0.5em 0 0.25rem 0;
		font-weight: 600;
		color: var(--link-color);	
	}
	.dark :global(h3) {
		color: #00c9b0;
	}
	.content :global(p)  {
		margin-bottom: 0.5rem;
		font-size: 1rem;
		font-family: var(--font-body);
	}
	.content :global(li) {
		list-style-type:decimal;
		font-weight:500;
		list-style-position:inside;
	}
	.content :global(a) {
		font-style: bold;
	}

	.content :global(blockquote > p) {
		font-size: var(--text-xl);
		border-radius: 5px;
		font-family: var(--font-body);
		font-weight: 500;
		line-height: 1.5;
		margin-bottom: 1rem;
		color:#1849ca;
		/* padding-inline-start: 1.5rem; */
		/* border-inline-start: 0.25rem solid var(--accent-regular); */
	}
	.dark :global(blockquote>p) {
		color:#00c9b0;
	}

	.back-link,
	.content :global(a) {
		text-decoration: 1px solid underline transparent;
		text-underline-offset: 0.25em;
		transition: text-decoration-color var(--theme-transition);
	}

	.back-link:hover,
	.back-link:focus,
	.content :global(a:hover),
	.content :global(a:focus) {
		text-decoration-color: currentColor;
	}

	@media (min-width: 45em) {
		/* h1 {
			font-size: 3rem;
		} */
		.back-link {
			display: block;
			align-self: flex-start;
		}

		.details {
			flex-direction: row;
			gap: 2.5rem;
		}
	}
</style>