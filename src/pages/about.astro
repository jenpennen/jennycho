---
import BaseLayout from "../layouts/BaseLayout.astro";
import { SITE } from "../consts";
const pageTitle = "About Me";

const about = {
  intro: "Hi, I'm Jenny. I specialize in UX design and frontend engineering.",
  background: "I was drawn to design through my engineering projects at UCLA. I was fascinated by how design shapes our interactions with technology. It inspired me to explore how design and technology work together to craft innovative and user-focused solutions.",
  mission: "As a user-centered engineer, I often ask myself: how can I blend design and tech to create authentic and nostalgic experiences in a digital world? I strive to combine clean design principles with thoughtful engineering to make online interactions seamless, natural, and enjoyable.",
};

const darkImage = "https://storage.googleapis.com/jennyencho-website/landing-img/melody-darkmode.png"
const lightImage = "https://storage.googleapis.com/jennyencho-website/landing-img/melody.png"
---
<html lang="en">
  <BaseLayout title="About Me" description="Hi, I'm Jenny Cho.">
    <body>
    <h1 class="text-2xl mb-3">{pageTitle}</h1>
    <!-- <h2 class="text-2xl md:text-xl sm:text-md w-5/6 pb-10">{identity.oneline}</h2> -->
    <span class="text-base md:text-base flex flex-row md:flex-row w-full gap-4">
      <div class="pt-4 pb-4 lg:w-full">
      <p class="pb-4">{about.intro}</p>
      <p class="pb-4">{about.background}</p>
      <p>{about.mission}</p>
      </div>
      <div>
        <img src='/melody.svg' alt="Melody" />
      </div>
    </span>
  </body>
  </BaseLayout>
</html>